
@using DicomApp.CommonDefinitions.DTO.AdvertisementDTOs
@model AdsDTO

<main>
    <div class="container-fluid site-width">
        <div class="row Red-Row">
            <div class="col-12 col-lg-12 col-xl-12 col-sm-12">
                <div class="sub-header">
                    <span class="Header-Titel">Receive Cash</span>
                </div>
            </div>
            <div class="col-12 col-lg-12 col-xl-12 col-sm-12">
                <p class="Shipment-Details-Titel-Small">Courier Cash Details</p>
            </div>
        </div>
    </div>
    <div class="Shipment-container">
        <form style="width:95%" class="needs-validation" method="post" id="formReceiveCash" action="@Url.Action("ReceiveCash")" novalidate>
            <div class="row Red-Row ml-4 pt-4 pb-4 Shipment-Details-Section">
                <div class="col-lg-4">
                    <label class="Shipment-Details-label">Courier Name</label>
                    @Html.DropDownListFor(model => model.DeliveryManId, new SelectList(ViewBag.Couriers, "Id", "Name"), "--- Select Courier ---", new { @class = "form-control ", @required = "required", @id = "CourierChangeval", @onChange = "ReceiveCashCourierChange()" })
                    <div class="invalid-feedback">
                        Please Select Courier .
                    </div>
                </div>
                <div class="col-lg-8">
                    <label class="Shipment-Details-label">Shipments Details</label>
                    <div class="spinner-border d-none text-danger" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                    <table class="OrdersTable w-100" id="dvcodes"></table>
                </div>
            </div>
            <div class="row Red-Row w-100">
                <div class="col-lg-12 RedBtn-Section">
                    <button id="btnReceiveCash" type="button" onclick="ReceiveCash()" class="Red-Btn">
                        <img class="mr-2" src="~/dist/images/Icons/Shipped.png" /> Confirm
                        <span class="Spinner spinner-border spinner-border-sm ml-3 mb-1 d-none" role="status" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</main>