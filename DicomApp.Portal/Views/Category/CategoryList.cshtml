                       
@using DicomApp.CommonDefinitions.DTO;
@using DicomApp.CommonDefinitions.DTO;
@using DicomApp.Helpers;
@using DicomApp.BL.Services;
@using DicomApp.DAL.DB;
@model ViewModel<CategoryDTO>
<main>
    <div class="container-fluid site-width">
        <!-- START: Filter-->
        <div class="row Red-Row">
            <div class="col-12 col-lg-12 col-xl-12 col-sm-12">
                <div class="sub-header mb-3">
                    <div>
                        <span class="Header-Titel">Category Management</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END: Filter-->
    <div class="Shipment-container">
        <!-- Start: Filter-->
        <div class="row Red-Row">
            @{
                await Html.RenderPartialAsync("_ToolsRow", new OptionDTO { Action = "CategoryList", Controller = "Category" });
            }
            <div class="row Red-Row w-100">
                <div class="col-lg-12 RedBtn-Section">
                    <a href="#" data-toggle="modal" data-target="#AddCategory-Model" class="Red-Btn"><img class="mr-2 w-20" src="~/dist/images/Icons/Location.png" />Add Category</a>
                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="ShipmentDetails" tabindex="-1" aria-labelledby="ShipmentDetailsLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div id="ShipmentDetails-Body" class="modal-body">
                    </div>
                </div>
            </div>
        </div>
        <!-- END  : Filter-->
    </div>
    <div class="col-12">
        <span id="Ajaxloader" class="Ajaxloader d-none"></span>
    </div>
    <div class="Table-container">
        <table class="table">
            <tdead>
                <thead>
                    <tr>
                        <td>Name Arabic</td>
                        <td>Name English</td>
                        <td class="text-center">Action</td>
                    </tr>
                </thead>
                <tbody>
                    <partial name="_CategoryList" model="Model.ObjDTOs" />
                </tbody>
        </table>
    </div>
    <!-- Add New Category Model -->
    <div class="modal fade" id="AddCategory-Model" tabindex="-1" role="dialog" aria-labelledby="AddCategoryLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div>
                    <button type="button" class="close m-2" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h2 class="Model-Titel">Add New Category</h2>
                    <form asp-action="AddCategory" asp-controller="Category" class="needs-validation" enctype="multipart/form-data" id="AddCategory-Form">
                        <div class="container-fluid P-Model">
                            <div class="row pt-5">
                                <div class="col-lg-6 pt-3">
                                    <label class="Label-Model">Name Arabic</label>
                                    <input class="input-Model" required id="NameAr" name="NameAr" placeholder="Name Arabic" />
                                    <div class="invalid-feedback">
                                        Please enter Name Arabic
                                    </div>
                                </div>

                                <div class="col-lg-6 pt-3">
                                    <label class="Label-Model"> Name English</label>
                                    <input class="input-Model" required id="NameEn" name="NameEn" placeholder="Name English" />
                                    <div class="invalid-feedback">
                                        Please enter Name English
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <button class="Red-Btn-OutLine OutLine-Red Btn-Model" onclick="AddEntity('Category','AddCategory','AddCategory-Form')" type="button" id="BtnSend">
                                        Add Category
                                        <span class="Spinner spinner-border spinner-border-sm ml-2 mb-1 d-none" role="status" aria-hidden="true"></span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- START: Card Data-->
</main>


