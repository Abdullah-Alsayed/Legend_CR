
@using DicomApp.CommonDefinitions.DTO
@using DicomApp.BL.Services;
@using DicomApp.Helpers;
@model List<UserNotificationDTO>
    <main>
        <div class="container-fluid site-width">
            <!-- START: Breadcrumbs-->
            <div class="row">
                <div class="col-12 align-self-center">
                    <div class="sub-header mt-3 py-3 align-self-center d-sm-flex w-100 rounded">
                        <div class="w-sm-100 mr-auto"><h4 class="mb-0">Notifications</h4></div>
                        <ol class="breadcrumb bg-transparent align-self-center m-0 p-0">
                            <li class="breadcrumb-item">Home</li>
                            <li class="breadcrumb-item active"><a href="#">Notifications</a></li>
                        </ol>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="container">
                            <div class="table-responsive">
                                <table width="100%" id="example" class="table table-bordered dataTable  table-hover mb-0" style="font-weight:bold;color:darkblue">
                                    <thead>
                                        <tr role="row">

                                            <th>
                                                Date
                                            </th>
                                            <th>
                                                Message
                                            </th>
                                            <th>
                                                By
                                            </th>
                                        </tr>

                                    </thead>

                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr role="row">
                                                <td>
                                                    <span class="badge badge-success" style="font-size:14px"><i class="fa fa-clock-o"></i> @item.CreationDate</span>
                                                </td>
                                                <td>
                                                    <b style="font-size:14px">@item.Body</b>
                                                </td>
                                                <td>
                                                    @item.SenderName
                                                </td>

                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </main>
