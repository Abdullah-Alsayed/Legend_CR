				<div class="portfolio-menu">
					<ul>
						<li data-filter="*" class="active">All</li>
						@foreach (var game in Model.Games)
						{
							<li data-filter=".@game.NameEn">@game.NameEn</li>
						}
					</ul>
				</div>
			</div>
		</div>
		<hr />
		<div class="row">
			<div class="col-lg-12">
