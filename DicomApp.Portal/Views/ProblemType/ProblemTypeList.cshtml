
@using DicomApp.CommonDefinitions.DTO;
@using DicomApp.CommonDefinitions.DTO;
@using DicomApp.Helpers;
@using DicomApp.BL.Services;
@using DicomApp.DAL.DB;
@model List<ProblemTypeDTO>
<main>
    <div class="container-fluid site-width">
        <!-- START: Filter-->
        <div class="row Red-Row">
            <div class="col-12 col-lg-12 col-xl-12 col-sm-12">
                <div class="sub-header mb-3">
                    <div>
                        <span class="Header-Titel">Problem Management</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- END: Filter-->
    <div class="Shipment-container">
        <!-- Start: Filter-->
        <div class="row Red-Row">
            @{
                await Html.RenderPartialAsync("_ToolsRow", new OptionDTO { Action = "ProblemTypeList", Controller = "ProblemType" });
            }
            <div class="row Red-Row w-100">
                <div class="col-lg-12 RedBtn-Section">
                    <a href="#" data-toggle="modal" data-target="#AddProblemType-Model" class="Red-Btn"><img class="mr-2 w-20" src="~/dist/images/Icons/Issues.png" />Add new Type</a>
                </div>
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="ShipmentDetails" tabindex="-1" aria-labelledby="ShipmentDetailsLabel" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div id="ShipmentDetails-Body" class="modal-body">
                    </div>
                </div>
            </div>
        </div>
        <!-- END  : Filter-->
    </div>
    <div class="col-12">
        <span id="Ajaxloader" class="Ajaxloader d-none"></span>
    </div>
    <div class="Table-container">
        <table class="table" id="Red-Table">
            <tdead>
                <thead>
                    <tr>
                        <td>ID</td>
                        <td>English Name</td>
                        <td>Arabic Name</td>
                        <td>Type</td>
                        <td>Action</td>
                    </tr>
                </thead>
                <tbody>
                    <partial name="_ProblemTypeList" model="Model" />
                </tbody>
        </table>
    </div>
    <!-- Add New ProblemType Model -->
    <div class="modal fade" id="AddProblemType-Model" tabindex="-1" role="dialog" aria-labelledby="AddProblemTypeLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div>
                    <button type="button" class="close m-2" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h2 class="Model-Titel">Add New Type</h2>
                    <form asp-action="AddProblemType" asp-controller="ProblemType" class="needs-validation" enctype="multipart/form-data" id="AddProblemType-Form">
                        <div class="container-fluid P-Model">
                            <div class="row pt-5">
                                <div class="col-lg-4 pt-3">
                                    <label class="Label-Model">English Name</label>
                                    <input class="input-Model" required id="NameEn" name="NameEn" placeholder="Problem Name English" />
                                    <div class="invalid-feedback">
                                        Please enter type English Name
                                    </div>
                                </div>
                                <div class="col-lg-4 pt-3">
                                    <label class="Label-Model">Arabic Name</label>
                                    <input class="input-Model" required id="NameAr" name="NameAr" placeholder="Problem Name Arabic" />
                                    <div class="invalid-feedback">
                                        Please enter type Arabic Name
                                    </div>
                                </div>
                                <div class="col-lg-4 pt-3">
                                    <label class="Label-Model">Type</label>
                                    <select id="Type" name="Type" class="input-Model" required>
                                        <option value=""> --- Select Type --- </option>
                                        <option value="0">Problem Type</option>
                                        <option value="1">Cancel Type</option>
                                    </select>
                                    <div class="invalid-feedback">
                                        Please Select type
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <button class="Red-Btn-OutLine OutLine-Red Btn-Model" type="button" onclick="AddEntity('ProblemType','AddProblemType','AddProblemType-Form')" id="BtnSend">
                                        Add Type
                                        <span class="Spinner spinner-border spinner-border-sm ml-2 mb-1 d-none" role="status" aria-hidden="true"></span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- START: Card Data-->
</main>


