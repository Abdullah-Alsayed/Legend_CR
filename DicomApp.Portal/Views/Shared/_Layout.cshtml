    @if (TempData["SuccessMsg"] != null)
    {
        <script>
            $(document).ready(function () {
                Swal.fire({
                    position: 'center',
                    icon: 'success',
                    title: '@TempData["SuccessMsg"]',
                    showConfirmButton: false,
                    timer: 5000
                });
            });
        </script>
    }
    @if (TempData["ErrorMsg"] != null)
    {
        <script>
            $(document).ready(function () {
                Swal.fire({
                    position: 'center',
                    icon: 'error',
                    title: '@TempData["ErrorMsg"]',
                    showConfirmButton: false,
                    timer: 5000
                });
            });
        </script>
    }
