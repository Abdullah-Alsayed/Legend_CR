
@using DicomApp.CommonDefinitions.DTO;

@model UserDTO;
@{
    Layout = "~/Views/Shared/_LayoutFront.cshtml";
}
<section class="error-page section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-12">

                <!-- Error Inner -->
                <div class="error-inner">
                    <img src="~/front/img/section-img.png" alt="#">

                    <form class="form" method="post" action="@Url.Action("ForgetPass")">
                        <p><b>You will recieve the info in your email?</b></p>
                        <hr />
                        <div class="row">
                            <div class="col-lg-12 col-md-6 col-12">
                                <div class="form-group">
                                    <input autocomplete="off" style="line-height:2.5" name="Email" class="form-control" type="email" placeholder="your email">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-12">
                                <div class="form-group">
                                    <div class="button">
                                        <button type="submit" class="btn btn-block">Send Info To Email</button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-7 col-md-8 col-12">
                            </div>
                        </div>
                    </form>
                </div>
                <!--/ End Error Inner -->
            </div>
        </div>
    </div>
</section>