
@using DicomApp.DAL.DB
@model Shipment
<main>
    <div class="container-fluid site-width">
        <!-- START: Filter-->
        <div class="row Red-Row">
            <div class="col-12 col-lg-12 col-xl-12 col-sm-12 mt-5">
                <div class="sub-header">
                    <div>
                        <span class="Header-Titel">Receive Shipment</span>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-12 col-xl-12 col-sm-12">
                <p class="Shipment-Details-Titel">shipment Details</p>
            </div>
        </div>
    </div>
    <div class="Shipment-container">
        <form style="width:95%" class="needs-validation" method="post" id="AddOrderVendor" action="@Url.Action("AddOrder","Vendor")" novalidate>
            <div class="row Red-Row ml-4 Shipment-Details-Section">
                <div class="col-lg-4">
                    <label class="Shipment-Details-label">Name</label>
                    <input type="text" placeholder="Label" />
                    <div class="invalid-feedback">
                        Please Select Service .
                    </div>
                </div>
                <div class="col-lg-4">
                    <label class="Shipment-Details-label">Shipment Code</label>
                    <input type="text" placeholder="Label" />
                    <div class="invalid-feedback">
                        Please Select Service .
                    </div>
                </div>
                <div class="col-lg-4">
                    <label class="Shipment-Details-label">Address</label>
                    <input type="text" placeholder="Label" />
                    <div class="invalid-feedback">
                        Please Select Service .
                    </div>
                </div>
                <div class="col-lg-4 pt-3">
                    <label class="Shipment-Details-label">Phone Number</label>
                    <input type="text" placeholder="Label" />
                    <div class="invalid-feedback">
                        Please Select Service .
                    </div>
                </div>
            </div>
            <div class="row Red-Row w-100">
                <div class="col-lg-12 RedBtn-Section">
                    <a href="#" data-toggle="modal" data-target="#AddGame-Model" class="Red-Btn"><img class="mr-2" src="~/dist/images/Icons/Shipped.png" /> received</a>
                </div>
            </div>
        </form>
    </div>
</main>