
@using DicomApp.CommonDefinitions.DTO.ShipmentDTOs;
@model List<ShipDTO>
@if (Model != null && Model.Count > 0)
{
    foreach (var item in Model)
    {
        <tr id="@item.ShipmentId" data-Vendor="@item.VendorDetailsDTO.VendorId">
            <td><input type="checkbox" value="@item.ShipmentId" id="checkbox_@item.ShipmentId" name="ShipmentIDs" checked=@item.SELECTED></td>
            <td>@item.RefId</td>
            <td>@item.CustomerDetailsDTO.CustomerName</td>
            <td>@item.ShipmentServiceName</td>
            <td>@item.NoOfItems</td>
            <td>@item.SettingDTO.Weight KG</td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="6" class="text-danger text-center"><h3>No data available in table</h3></td>
    </tr>
}

<input type="hidden" value="@(Model != null ? Model.Count:0)" id="DataCount" />
