
@using DicomApp.CommonDefinitions.DTO.VendorProductDTOs;
@model List<VendorProductDTO>
@{
    Layout = "~/Views/Shared/_PrintLayout.cshtml";
}
<table class="table">
    <thead>
        <partial name="_ReportHeder" model="11" />
        <tr>
            <td>Item Code</td>
            <td>Item Name</td>
            <td>Item Description</td>
            <td>Item Size</td>
            <td>Item Number</td>
            <td>Image</td>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.VendorProductId</td>
                    <td>@item.Name</td>
                    <td class="w-25">@item.Description</td>
                    <td> @item.Size cm </td>
                    <td>@item.AvailableStock</td>
                    <td><img src="@( !string.IsNullOrEmpty(item.ImageUrl)? "~/dist/images/" + item.ImageUrl : "~/dist/images/Fake-Img.png")" /></td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7">
                    <h6 class="text-center text-danger my-5">No data available in table</h6>
                </td>
            </tr>
        }
    </tbody>
</table>