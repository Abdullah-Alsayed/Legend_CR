
@using DicomApp.CommonDefinitions.DTO;
@using DicomApp.CommonDefinitions.DTO.AdvertisementDTOs;
@using DicomApp.Helpers;
@model List<AdsDTO>
@{
    Layout = "~/Views/Shared/_PrintLayout.cshtml";
}
@if (Model != null && Model.Count() > 0)
{
    <table class="table">
        <thead>
            <partial name="_ReportHeder" model="11" />
                <tr>
                    <td>Code</td>
                    <td>Date </td>
                    <td>Area </td>
                    <td>Customer</td>
                    <td>Pickup date </td>
                    <td># of Shipments</td>
                    <td>Status </td>
                </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach (var item in Model)
                {
                    <tr onclick="ShipmentDetails('Vendor',@item.AdvertisementId)" data-toggle="modal" data-target="#ShipmentDetails">
                        <td>@item.RefId</td>
                        <td class="text-nowrap Date-Table">@item.CreatedAt.ToString("MMM dd,yyy")</td>
                        <td>@item.UserName</td>
                        <td>0</td>
                        <td class="text-nowrap Date-Table"></td>
                        <td>0</td>
                        <partial name="/Views/Shared/Shipment/_StatusSwitch.cshtml" model="@item.Status" />
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="10" class="text-danger text-center"><h3>No data available in table</h3></td>
                </tr>
            }

        </tbody>
    </table>
}


