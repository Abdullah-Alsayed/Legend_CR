
@using DicomApp.CommonDefinitions.DTO;
@model ViewModel<UserDTO>

<main>
    <form asp-action="EditVendor" id="EditVendor-Form" asp-controller="User" class="needs-validation" novalidate>
    <div id="EditVendor-Div" class="overflow-hidden">
        <div class="container-fluid site-width">
            <!-- START: Filter-->
            <div class="row Red-Row">
                <div class="col-12 col-lg-12 col-xl-12 col-sm-12 Pickup-Header">
                    <div class="sub-header p-2">
                        <span class="Header-Titel">Edit Data</span>
                    </div>
                </div>
                <div class="Shipment-Details-Section ql-transparent p-3">
                    <div class="col-lg-4 mb-3">
                        <label class="Shipment-Details-label">UserName</label>
                        <input type="text" placeholder="UserName" value="@Model.ObjDTO.PageName" id="PageName" name="PageName" required />
                        <div class="invalid-feedback">
                            Please enter UserName
                        </div>
                    </div>
                    <div class="col-lg-4 mb-3">
                        <label class="Shipment-Details-label">Password</label>
                        <input type="Password" placeholder="Password" value="@Model.ObjDTO.Password" id="Password" name="Password" required />
                        <div class="invalid-feedback">
                            Please enter Password
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="Shipment-container">
            <div class="row Red-Row w-100">
                <div class="col-lg-4">
                    <h6 class="my-4 ml-2 font-w-500">Vendors Details</h6>

                    <div class="Shipment-Details-Section">
                        <div class="col-lg-12 mb-3">
                            <label class="Shipment-Details-label">Vendor Name</label>
                            <input type="text" placeholder="vendor Name" id="Name" name="Name" value="@Model.ObjDTO.Name"required />
                            <div class="invalid-feedback">
                                Please enter vendor Name
                            </div>
                        </div>
                        <div class="col-lg-12 mt-3">
                            <label class="Shipment-Details-label">Business Type</label>
                            <input type="text" id="ProductType" name="ProductType" placeholder="Business Type" value="@Model.ObjDTO.ProductType" required />
                            <div class="invalid-feedback">
                                Please enter Business Type
                            </div>
                        </div>
                        <div class="col-lg-12 mt-3">
                            <label class="Shipment-Details-label">Phone Number</label>
                            <input type="text" placeholder="PhoneNumber" id="PhoneNumber" name="PhoneNumber" value="@Model.ObjDTO.PhoneNumber" required />
                            <div class="invalid-feedback">
                                Please enter Phone Number
                            </div>
                        </div>

                        <div class="col-lg-12 mt-3">
                            <label class="Shipment-Details-label">Email</label>
                            <input class="Input-Txt" type="email" placeholder="Email" id="Email" name="Email" value="@Model.ObjDTO.Email" required />
                            <div class="invalid-feedback">
                                Please enter Email
                            </div>
                        </div>
                        <div class="col-lg-12 mt-3">
                            <label class="Shipment-Details-label">Address</label>
                            <input type="text" placeholder="Address" id="Address" name="Address" value="@Model.ObjDTO.Address" required />
                            <div class="invalid-feedback">
                                Please enter Address
                            </div>
                        </div>

                        <div class="col-lg-12 mt-3">
                            <label class="Shipment-Details-label">Location Url</label>
                            <input placeholder="Location Url" class="Input-Txt" id="LocationUrl" name="LocationUrl" value="@Model.ObjDTO.LocationUrl">
                            <div class="invalid-feedback">
                                Please enter a valid Location Url.
                            </div>
                        </div>
                        <div class="col-lg-12 mt-3">
                            <label class="Shipment-Details-label">Landmark</label>
                            <input type="text" placeholder="Landmark" id="Landmark" name="Landmark" value="@Model.ObjDTO.Landmark">
                            <div class="invalid-feedback">
                                Please enter a valid Landmark.
                            </div>
                        </div>
                        <div class="col-lg-6 mt-3">
                            <label class="Shipment-Details-label">Floor</label>
                            <input type="number" min="0" class="input-Number" id="Floor" name="Floor" placeholder="Floor" value="@Model.ObjDTO.Floor"/>
                            <div class="invalid-feedback">
                                Please enter Floor.
                            </div>
                        </div>
                        <div class="col-lg-6 mt-3">
                            <label class="Shipment-Details-label">Apartment</label>
                            <input type="number" min="0" class="input-Number" id="Apartment" name="Apartment" placeholder="Apartment" value="@Model.ObjDTO.Apartment" />
                            <div class="invalid-feedback">
                                Please enter No. of Apartment.
                            </div>
                        </div>
                        <div class="col-lg-12 mt-3">
                            <label class="Shipment-Details-label">Governament</label>
                                <select id="ZoneId" name="ZoneId" class="form-control" onchange="GetAreasByZone(event)" required">
                                <option value="">--- Select Governament ---</option>
                                @foreach (var item in Model.Lookup.ZoneDTOs)
                                {
                                        if (Model.ObjDTO.ZoneId == item.Id)
                                        {
                                            <option value="@item.Id" selected>@item.NameAr</option>
                                        }
                                        else
                                        {      
                                            <option value = "@item.Id"> @item.NameAr </option>
                                        }
                                }               
                             </select>

                        </div>
                        <div class="col-lg-12 mt-3">
                            <label class="Shipment-Details-label">Area</label>
                            <select id="AreaId" name="AreaId" class="form-control" required">
                                <option value="">--- Select Area ---</option>
                                @foreach (var item in Model.Lookup.AreaDTOs)
                                {
                                        if (Model.ObjDTO.AreaId == item.Id)
                                        {
                                            <option value="@item.Id" selected>@item.CityNameAr</option>
                                        }
                                        else
                                        {      
                                            <option value = "@item.Id"> @item.CityNameAr </option>
                                        }
                                }               
                             </select>
                            <div class="invalid-feedback">
                                Please Select Area.
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8 w-100 Picku-Scehdule">
                    <h6 class="my-4 ml-2 font-w-500">Bank Account Details</h6>
                    <div style="width:98%" class="Shipment-Details-Section">
                        <div class="row Red-Row Stock-Modal">
                            <div class="col-lg-6">
                                <label class="Shipment-Details-label">Bank</label>
                                <input type="text" id="Bank" name="Bank" placeholder="Bank" value="@Model.ObjDTO.Bank" />
                            </div>
                            <div class="col-lg-6">
                                <label class="Shipment-Details-label">Account Name</label>
                                <input type="text" id="AccountName" name="AccountName" placeholder="Account Name" value="@Model.ObjDTO.AccountName"/>
                            </div>
                            <div class="col-lg-6 mt-4">
                                <label class="Shipment-Details-label">Account Number</label>
                                <input type="number" class="input-Number" id="AccountNumber" name="AccountNumber" placeholder="Account Number" value="@Model.ObjDTO.AccountNumber" />
                            </div>
                            <div class="col-lg-6 mt-4">
                                <label class="Shipment-Details-label">IBAN Number</label>
                                <input type="number" class="input-Number" id="IBANNumber" name="IBANNumber" placeholder="IBAN Number" value="@Model.ObjDTO.IBANNumber" />
                            </div>
                        </div>
                    </div>

                    <h6 class="my-4 ml-2 font-w-500">Vodafone Cash Details</h6>
                    <div style="width:98%" class="Shipment-Details-Section">
                        <div class="row Red-Row Stock-Modal">
                            <div class="col-lg-6">
                                <label class="Shipment-Details-label">Vodafone Cash Number</label>
                                <input type="number" class="input-Number" id="VodafoneCashNumber" name="VodafoneCashNumber" placeholder="Vodafone Cash Number" value="@Model.ObjDTO.VodafoneCashNumber" />
                            </div>
                        </div>
                    </div>

                    <h6 class="my-4 ml-2 font-w-500">InstaPay Account Details</h6>
                    <div style="width:98%" class="Shipment-Details-Section">
                        <div class="row Red-Row Stock-Modal">
                            <div class="col-lg-6">
                                <label class="Shipment-Details-label">InstaPay Account Name</label>
                                <input type="number" class="input-Number" id="InstaPayAccountName" name="InstaPayAccountName" placeholder="InstaPay Account Name" value="@Model.ObjDTO.InstaPayAccountName" />
                            </div>
                        </div>
                    </div>

                    <div class="col-lg-12">
                        <button class="Red-Btn-OutLine OutLine-white Btn-Model" onclick="OpenFileInput('EditVendor-Form')" type="button">
                            Update logo
                        </button>
                        @if (!string.IsNullOrEmpty(Model.ObjDTO.ImgUrl) )
                        {
                            <img src="/dist/images/@Model.ObjDTO.ImgUrl" id="DisplayImg" width="200" class="pt-3" onclick="OpenFileInput('EditVendor-Form')" />
                        }
                        else
                        {
                            <img src="/dist/images/Partial.png" id="DisplayImg" width="200" class="d-none pt-3" onclick="OpenFileInput('EditVendor-Form')" />
                        }
                        <input id="ImgFile" data-id="ImgFile" name="file" type="file" onchange="DisplayUpdateImg(event)" accept="image/gif, image/jpeg, image/png" hidden />
                    </div>
                </div>
            </div>
            <input id="Id" name="Id" value="@Model.ObjDTO.Id" type="hidden" />
            <input id="ImgUrl" name="ImgUrl" value="@Model.ObjDTO.ImgUrl" type="hidden" />
            <div class="row ml-0 Red-Row VendorsManagement">
                <div class="col-lg-12 col-12 ml-3 Buttons-Submit-Section justify-content-between">
                    <button type="button" onclick="MenuNavigation(event,'AccountDashboard','Home')" class="Red-Btn"><img class="mr-2" src="~/dist/images/Icons/Shipped.png" />Back</button>
                    <button type="button" id="BtnSend" onclick="EditUser('User','EditUser','EditVendor-Form')" class="Red-Btn">
                        <img class="mr-2" src="~/dist/images/Icons/Shipped.png" />Confirm
                        <span class="Spinner spinner-border spinner-border-sm ml-2 mb-1 d-none" role="status" aria-hidden="true"></span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>
</main>