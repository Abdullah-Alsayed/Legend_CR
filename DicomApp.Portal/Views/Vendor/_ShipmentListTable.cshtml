
@using DicomApp.CommonDefinitions.DTO.AdvertisementDTOs;
@model List<AdsDTO>

 @if (Model != null && Model.Count > 0)
 {
    foreach (var ship in Model)
    {
        double REDFees = 0;

        <tr onclick="ShipmentDetails('Vendor',@ship.AdvertisementId)" data-toggle="modal" data-target="#ShipmentDetails">
            <td class="font-weight-bold">@ship.RefId</td>
            <td class="text-nowrap Date-Table">@ship.CreatedAt.ToString("dd MMM yyyy")</td>
            <td>0</td>
            <td>0</td>
            <td class="text-center pl-1 pr-1">0</td>
            <td class="text-center text-nowrap pl-1 pr-1">@REDFees EGP</td>
            <td class="text-center text-nowrap pl-1 pr-1">0 EGP</td>
            <partial name="/Views/Shared/Advertisement/_StatusSwitch.cshtml" model="@ship.Status" />
        </tr>
    }
}
else
{
    <tr>
        <td colspan="10" class="text-danger text-center"><h3>No data available in table</h3></td>
    </tr>
}
<input type="hidden" value="@(Model != null ? Model.Count:0)" id="DataCount" />