
@using DicomApp.CommonDefinitions.DTO
@model PackingDTO

    <link rel="stylesheet" href="~/dist/vendors/select2/css/select2.min.css" />
    <link rel="stylesheet" href="~/dist/vendors/select2/css/select2-bootstrap.min.css" />
    <style>
        .col-form-label {
            font-weight: bold;
            color: #1e3d73;
        }
    </style>
    <main>
        <div class="container-fluid site-width">
            <!-- START: Breadcrumbs-->
            <div class="row">
                <div class="col-12 align-self-center">
                    <div class="sub-header mt-3 py-3 align-self-center d-sm-flex w-100 rounded">
                        <div class="w-sm-100 mr-auto"><h4 class="mb-0">@(Model !=null ? "Edite":"Add") Packing</h4></div>
                        <ol class="breadcrumb bg-transparent align-self-center m-0 p-0">
                            <li class="breadcrumb-item">Packing Management</li>
                            <li class="breadcrumb-item active"><a href="#">@(Model !=null ? "Edite":"Add") Packing</a></li>
                        </ol>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <form class="needs-validation" method="post" asp-action="@(Model !=null ? "EditPacking" : "Addpacking")" enctype="multipart/form-data" novalidate>
                        <div class="card">
                            <div class="card-header bg-light">
                                <h6 class="card-title font-weight-bold">Packing Information</h6>
                            </div>
                            <div class="card-content">
                                <div class="card-body">
                                    <div class="row">
                                        <label class="col-sm-2 col-form-label">Name Arabic</label>
                                        <div class="col-sm-10">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text bg-transparent border-right-0"><i class="icon-options"></i></span>
                                                </div>
                                                <input type="text" asp-for="NameAr" class="form-control" required placeholder="Name Arabic">
                                                <div class="invalid-feedback">
                                                    Please enter a valid Name Arabic.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class="col-sm-2 col-form-label">Name English</label>
                                        <div class="col-sm-10">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text bg-transparent border-right-0"><i class="icon-options"></i></span>
                                                </div>
                                                <input type="text" asp-for="NameEn" class="form-control" required placeholder="Name English">
                                                <div class="invalid-feedback">
                                                    Please enter a valid Name English.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class="col-sm-2 col-form-label">Size</label>
                                        <div class="col-sm-10">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text bg-transparent border-right-0"><i class="icon-size-fullscreen"></i></span>
                                                </div>
                                                <input type="text" asp-for="Size" class="form-control" required placeholder="Size">
                                                <div class="invalid-feedback">
                                                    Please enter a valid Size.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class="col-sm-2 col-form-label">Count</label>
                                        <div class="col-sm-10">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text bg-transparent border-right-0"><i class="icon-options"></i></span>
                                                </div>
                                                <input type="number" min="0" asp-for="Count" class="form-control" required placeholder="Count">
                                                <div class="invalid-feedback">
                                                    Please enter a valid Count.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class="col-sm-2 col-form-label">Price</label>
                                        <div class="col-sm-10">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text bg-transparent border-right-0"><i class="icon-options"></i></span>
                                                </div>
                                                <input type="number" min="0" asp-for="Price" class="form-control" required placeholder="Price">
                                                <div class="invalid-feedback">
                                                    Please enter a valid Price.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class="col-sm-2 col-form-label">PackingType</label>
                                        <div class="col-sm-10">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text bg-transparent border-right-0"><i class="icon-options"></i></span>
                                                </div>
                                            <select asp-items="@(new SelectList(ViewBag.PackingType,"Id","NameEn"))" asp-for="PackingTypeId" class="form-control" required placeholder="PackingType">
                                                <option value="">Please select</option>
                                                </select>
                                                 <div class="invalid-feedback">
                                                    Please select a valid PackingType.
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class="col-sm-2 col-form-label">Photo</label>
                                        <div class="col-sm-8">
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text bg-transparent border-right-0"><i class="icon-options"></i></span>
                                                </div>
                                                @if (Model ==null)
                                                    {
                                                       <input type="file" accept="image/*,.png,.jpg,.gif" asp-for="File" class="form-control" required placeholder="Photo">
                                                    }else
                                                    {
                                                       <input type="file" accept="image/*,.png,.jpg,.gif" asp-for="File" class="form-control"  placeholder="Photo">
                                                       <input type="hidden" asp-for="ImgUrl"/>
                                                    }
                                                
                                                <div></div>
                                                <div class="invalid-feedback">
                                                    Please enter a valid Photo.
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-2">
                                            <div id="Img-Div" class="@(Model != null ? string.Empty : "d-none")">
                                                <img id="ImgPacking" src="@(Model !=null ?"/dist/images/"+Model.ImgUrl: string.Empty)" width="120" />
                                            </div>
                                        </div>
                                        @if (Model !=null && Model.Messege != null)
                                        {
                                            <div class="alert alert-danger">
                                                 @Model.Messege
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <br />
                        <button type="submit" class="btn btn-success btn-block font-weight-bold">Save & Submit</button>
                    </form>
                </div>
            </div>
        </div>
        <!-- END: Card DATA-->
    </main>
<script src="~/dist/js/app.js"></script>
    <script src="~/dist/vendors/select2/js/select2.full.min.js"></script>
    <script src="~/dist/js/select2.script.js">                  </script>
    <script src="~/dist/js/jquery.validate.min.js"></script>
    <script src="~/dist/js/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/SubmetLoder.js">                          </script>
    <script>
$("#File").change(function() {
    var Img = window.URL.createObjectURL(this.files[0]);
    $("#Img-Div").removeClass("d-none");
    $("#ImgPacking").attr('src', Img);
})
    </script>