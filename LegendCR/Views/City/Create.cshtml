
@model LegendCR.DAL.DB.City

@{
    ViewBag.Title = "Create";
}

<main>
    <div class="container-fluid site-width">
        @using (Html.BeginForm())
        {

            <div class="row">
                <div class="col-12 mt-3">
                    <div class="card">
                        <div class="card-header  justify-content-between align-items-center">
                            <h4 class="card-title">Add New City</h4>
                        </div>
                        <div class="card-body table-responsive">
                            <div class="row">
                                <!-- begin col-4 -->
                                <!-- begin col-4 -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>En Name</label>


                                        @Html.TextBoxFor(model => model.CityName, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.CityName, "", new { @class = "validation-message" })
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>
                                            Ar Name
                                        </label>
                                        @Html.TextBoxFor(model => model.CityNameAr, new { @class = "form-control" })
                                        @Html.ValidationMessageFor(model => model.CityNameAr, "", new { @class = "validation-message" })
                                    </div>
                                </div>


                            </div>

                            <hr />
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <input type="submit" class="btn btn-success btn-block" value="Save and Submit" />
                                        <span class="validation-message">@ViewBag.error</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        }

    </div>
</main>


