
@using DicomDB.CommonDefinitions.DTO;
@model List<ComplainsDTO>
@{
    Layout = "~/Views/Shared/_PrintLayout.cshtml";
    string path = Url.ActionContext.HttpContext.Request.Path;
 }
    @if (Model != null && Model.Count() > 0)
{
  <table class="table">
    <thead>
        <partial name="_ReportHeder" model="11" />
        <tr>
            <td>Name</td>
            <td>Date</td>
            <td>Description</td>
            <td>Department</td>
            <td>Employee</td>
            <td>status</td>
            <td>Action By</td>
            <td>Comments</td>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @(item.VendorName ?? "---")
                </td>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.Description</td>
                <td><b>@item.Department</b></td>
                <td>
                    @(item.EmployeeName ?? "---")
                </td>
                <td>
                    @if (!item.Solved)
                    {
                        <span class="status-Table Yellow">Pending</span>
                    }
                    else
                    {
                        <span class="status-Table Green">Solved</span>
                    }
                </td>
                <td>@item.CreateBy</td>
                <td>@item.Comments</td>
            </tr>
            }
    </tbody>
  </table>
}