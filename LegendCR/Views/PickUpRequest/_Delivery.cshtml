
@using LegendCR.BL.Services
@using LegendCR.CommonDefinitions.DTO.PickupDTOs
@using LegendCR.CommonDefinitions.DTO
@using LegendCR.Helpers
@model PickupDTO

@if (Model != null)
{
    foreach (var item in Model.Shipments)
    {
        <tr id="@item.ShipmentId" data-Vendor="@item.VendorDetailsDTO.VendorId">
            <td><input type="checkbox" value="@item.ShipmentId" id="checkbox_@item.ShipmentId" name="ShipmentId" class="ShipmentSelect"></td>
            <td onclick="ShipmentDetails('Shipment',@item.ShipmentId)" data-toggle="modal" data-target="#ShipmentDetails"><b>@item.RefId</b></td>
            <td>@item.VendorDetailsDTO.VendorName</td>
            <td>@item.CustomerDetailsDTO.CustomerName</td>
            <td>@item.ShipmentServiceName</td>
            <td>@item.NoOfItems</td>
            <td>@item.SettingDTO.Weight KG</td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="10" class="text-danger text-center"><h3>No data available in table</h3></td>
    </tr>
}
<input type="hidden" value="@Model.Shipments.Count()" id="DataCount" />