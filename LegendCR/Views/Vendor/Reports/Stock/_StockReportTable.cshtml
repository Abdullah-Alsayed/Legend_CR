
@using LegendCR.CommonDefinitions.DTO.VendorProductDTOs;
@model List<VendorProductDTO>
@if (Model != null && Model.Count > 0)
{
    foreach (var item in Model)
    {
        <tr>
            <td>@item.VendorProductId</td>
            <td>@item.Name</td>
            <td class="w-25">@item.Description</td>
            <td> @item.Size cm </td>
            <td>@item.AvailableStock</td>
            <td><img src="@( !string.IsNullOrEmpty(item.ImageUrl)? "~/dist/images/" + item.ImageUrl : "~/dist/images/Fake-Img.png")" /></td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="7">
            <h6 class="text-center text-danger my-5">No data available in table</h6>
        </td>
    </tr>
}

<input type="hidden" value="@(Model != null ? Model.Count : 0)" id="DataCount" />
