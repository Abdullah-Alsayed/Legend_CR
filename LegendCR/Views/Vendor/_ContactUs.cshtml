                        <div class="col-lg-3 Radio-Form">
                                <input class="Radio-Input-Form" value="4" type="radio" id="Subject" name="Subject" />
                            <label>General Inquiry</label>
                        </div> *@
                        <div class="col-lg-12 Contact-Message">
                            <label class="w-100">Message</label>
                            <input type="text" asp-for="Message" placeholder="Write your message.." required />
                                <div class="invalid-feedback">
                                    Please enter a Message.
                                </div>
                        </div>
                        <div class="col-lg-12 d-flex justify-content-end Buttons-Calculator-Section">
                            <button type="button" id="BtnSend" onclick="AddEntity('Vendor','ContactUs','AddContactUs-Form')" class="Calc-Btn">
                                Send Message
                                    <span class="Spinner spinner-border spinner-border-sm ml-2 mb-1 d-none" role="status" aria-hidden="true"></span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>            
        </div>
     </div>
