
@using LegendCR.CommonDefinitions.DTO.ShipmentDTOs
@using LegendCR.CommonDefinitions.DTO
@using LegendCR.Helpers
@model List<ShipDTO>

<main>
    <div class="container-fluid site-width">
        <div class="row Red-Row">
            <div class="col-12 col-lg-12 col-xl-12 col-sm-12">
                <div class="sub-header d-flex">
                    <div>
                        <span class="Header-Titel">Shipments</span>
                    </div>
                    <div class="Shipment-Filter">
                        <ul id="Shipment-Filter-Ul">
                            <li id="Pending-Shipments" class=" Active" data-status="@((int)EnumStatus.At_Warehouse)"> <a onclick="FilterByStatus('Shipments','Warehouse','Pending-Shipments', @((int)EnumStatus.At_Warehouse))" href="Javascript:;">Pending Shipments</a></li>
                            <li id="Ready-Shipments" data-status="@((int)EnumStatus.Ready_For_Delivery)"><a onclick="FilterByStatus('Shipments','Warehouse','Ready-Shipments',@((int)EnumStatus.Ready_For_Delivery))" href="Javascript:;">Ready Shipments</a></li>
                            <li id="Cancelled-Shipments" data-status="@((int)EnumStatus.Cancelled)"><a onclick="FilterByStatus('Shipments','Warehouse','Cancelled-Shipments',@((int)EnumStatus.Cancelled))" href="Javascript:;">Cancelled Shipments</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="Shipment-container">
        <div class="row Red-Row">
            @{
                //await Html.RenderPartialAsync("_ToolsRow", new OptionDTO { Action = "Shipments", Controller = "Warehouse", SelectListType = new byte[] { (byte)EnumSelectListType.Vendor } });
            }
        </div>
    </div>

    <div class="col-12">
        <span id="Ajaxloader" class="Ajaxloader d-none"></span>
    </div>
    <div class="Table-container">
        <table class="table Shipments-Warehouse" id="Table">
            <partial name="_Pending" />
        </table>
    </div>

    <!-- Items included Model -->
    <div class="modal fade" id="Itemsincluded-Model" tabindex="-1" role="dialog" aria-labelledby="Itemsincluded" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div>
                    <button type="button" class="close m-2" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h2 class="Model-Titel">Items included</h2>
                    <div class="Table-container" id="Itemsincluded-TableSection">
                        <table id="Red-Table" class="table">
                            <tbody id="tblContent">
                                <tr>
                                    <td colspan="10">
                                        <div class="spinner-border text-danger ml-50" role="status">
                                            <span class="sr-only">Loading...</span>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>