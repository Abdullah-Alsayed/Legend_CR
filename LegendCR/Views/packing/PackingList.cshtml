
@using LegendCR.CommonDefinitions.DTO;
@using LegendCR.CommonDefinitions.DTO;
@using LegendCR.Helpers;
@using LegendCR.BL.Services;
@using LegendCR.DAL.DB;
@model ViewModel<PackingDTO>
<main>
    <div class="container-fluid site-width">
        <!-- START: Filter-->
        <div class="row Red-Row">
            <div class="col-12 col-lg-12 col-xl-12 col-sm-12">
                <div class="sub-header mb-3">
                        <span class="Header-Titel">Packing Management</span>
                </div>
            </div>
        </div>
    </div>
    <div class="Shipment-container">
        <!-- Start: Filter-->
        <div class="row Red-Row">
            @{
                await Html.RenderPartialAsync("_ToolsRow",
                new OptionDTO
            {
                Action = "PackingList",
                Controller = "packing",
                Lookup = Model.Lookup,
                SelectListType = new byte[] {
            (byte)EnumSelectListType.PackingType,
            (byte)EnumSelectListType.Quantity }
            });
            }
            <div class="row Red-Row w-100">
                <div class="col-lg-12 RedBtn-Section">
                    <a href="#" data-toggle="modal" data-target="#AddPacking-Model" class="Red-Btn"><img class="mr-2" src="~/dist/images/Icons/Total.png" />Add Packing</a>
                </div>
            </div>
        </div>
        <!-- END  : Filter-->
        <div class="col-12">
            <span id="Ajaxloader" class="Ajaxloader d-none"></span>
        </div>
        <div class="Table-container">
            <table class="table">
                <thead>
                    <tr>
                        <td>#</td>
                        <td>Name</td>
                        <td>Type</td>
                        <td>size</td>
                        <td>description</td>
                        <td>quantity</td>
                        <td>price</td>
                        <td>Photo</td>
                        <td class="text-center">Actions</td>
                    </tr>
                </thead>
                <tbody>
                    <partial name="_PackingList" model="Model.ObjDTOs" />
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="10">
                            @{
                                await Html.RenderPartialAsync("_Pagination", new OptionDTO { Action = "PackingList", Controller = "packing", Count = Model.ObjDTOs != null ? Model.ObjDTOs.Count : 0 });
                            }
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
    <!-- Add New Packing Model -->
    <div class="modal fade" id="AddPacking-Model" tabindex="-1" role="dialog" aria-labelledby="AddPackingLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div>
                    <button type="button" class="close m-2" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h2 class="Model-Titel">Add New Packing</h2>
                    <form asp-action="Addpacking" asp-controller="packing" class="needs-validation" enctype="multipart/form-data" id="AddPacking-Form" novalidate>
                        <div class="container-fluid P-Model">
                            <div class="row pt-2">
                                <div class="col-lg-6 pt-3">
                                    <label class="Label-Model">Name English</label>
                                    <input class="input-Model" type="text" required placeholder="NameEn" name="NameEn" id="NameEn" />
                                    <div class="invalid-feedback">
                                        Please enter NameEn
                                    </div>
                                </div>
                                <div class="col-lg-6 pt-3">
                                    <label class="Label-Model">Name Arabic</label>
                                    <input class="input-Model" type="text" required placeholder="NameAr" name="NameAr" id="NameAr" />
                                    <div class="invalid-feedback">
                                        Please enter NameaAR
                                    </div>
                                </div>
                                <div class="col-lg-6 pt-3">
                                    <label class="Label-Model">Type</label>
                                    @Html.DropDownList("PackingTypeId", new SelectList(Model.Lookup.PackingTypeDTOs, "Id", "NameEn"),"--- Select Type ---",
                                    new {@required="required" ,@class="input-Model", name="PackingTypeId", id="PackingTypeId"})
                                    <div class="invalid-feedback">
                                        Please Select Type
                                    </div>
                                </div>
                                <div class="col-lg-6 pt-3">
                                    <label class="Label-Model">Size</label>
                                    <input class="input-Model" type="text" required name="Size" placeholder="Size" id="Size" />
                                    <div class="invalid-feedback">
                                        Please enter Size
                                    </div>
                                </div>
                                <div class="col-lg-6 pt-3">
                                    <label class="Label-Model">Quantity</label>
                                    <input class="input-Model" type="number" min="1" required name="Count" placeholder="Count" id="Count" />
                                    <div class="invalid-feedback">
                                        Please enter Quantity
                                    </div>
                                </div>
                                <div class="col-lg-6 pt-3">
                                    <label class="Label-Model">Price</label>
                                    <input class="input-Model" type="number" min="1" required name="Price" placeholder="Price" id="Price" />
                                    <div class="invalid-feedback">
                                        Please enter Price
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <button class="Red-Btn-OutLine OutLine-white Btn-Model mt-3" onclick="OpenFileInput('AddPacking-Form')" type="button">Upload Image</button>
                                    <input type="file" accept="image/*,.png,.jpg,.gif" id="ImgFile" name="File" class="form-control d-none Add-Photo" placeholder="Photo">
                                </div>
                                <div class="col-lg-12 pt-5 pb-5">
                                    <label class="Label-Model">Description</label>
                                    <textarea class="h-75" rows="6"></textarea>
                                </div>
                                <div class="col-lg-12">
                                    <button class="Red-Btn-OutLine OutLine-Red Btn-Model" type="button" onclick="AddEntity('packing','Addpacking','AddPacking-Form')" id="BtnSend">
                                        Add Packing
                                        <span class="Spinner spinner-border spinner-border-sm ml-2 mb-1 d-none" role="status" aria-hidden="true"></span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Edit Packing Model -->
    <div class="modal fade" id="EditPacking-Model" tabindex="-1" role="dialog" aria-labelledby="EditPackingLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div>
                    <button type="button" class="close m-2" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h2 class="Model-Titel">Edit Packing</h2>
                    <form asp-action="EditPacking" asp-controller="Packing" class="needs-validation" enctype="multipart/form-data" id="EditPacking-Form">
                        <div class="container-fluid P-Model">
                            <div class="row pt-5">
                                <div class="col-lg-6 pt-3">
                                    <label class="Label-Model">Name English</label>
                                    <input class="input-Model" type="text" required placeholder="NameEn" name="NameEn" id="NameEn" />
                                    <div class="invalid-feedback">
                                        Please enter NameEn
                                    </div>
                                </div>
                                <div class="col-lg-6 pt-3">
                                    <label class="Label-Model">Name Arabic</label>
                                    <input class="input-Model" type="text" required placeholder="NameAr" name="NameAr" id="NameAr" />
                                    <div class="invalid-feedback">
                                        Please enter Name Ar
                                    </div>
                                </div>
                                <div class="col-lg-6 pt-3">
                                    <label class="Label-Model">Type</label>
                                    @Html.DropDownList("PackingTypeId", new SelectList(Model.Lookup.PackingTypeDTOs, "Id", "NameEn"),"---  ---",
                                    new {@required="required" ,@class="input-Model", name="PackingTypeId", id="PackingTypeId"})
                                    <div class="invalid-feedback">
                                        Please Select Type
                                    </div>
                                </div>
                                <div class="col-lg-6 pt-3">
                                    <label class="Label-Model">Size</label>
                                    <input class="input-Model" type="text" required name="Size" id="Size" />
                                    <div class="invalid-feedback">
                                        Please Enter Size
                                    </div>
                                </div>
                                <div class="col-lg-6 pt-3">
                                    <label class="Label-Model">Quantity</label>
                                    <input class="input-Model" type="number" min="1" required name="Count" id="Count" />
                                    <div class="invalid-feedback">
                                        Please Enter Quantity
                                    </div>
                                </div>
                                <div class="col-lg-6 pt-3">
                                    <label class="Label-Model">Price</label>
                                    <input class="input-Model" type="number" min="1" required name="Price" id="Price" />
                                    <div class="invalid-feedback">
                                        Please Enter Price
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="Logo-Edit">
                                        photo <span onclick="OpenFileInput('EditPacking-Form')"><i class="icon-note F-Medium"></i></span>
                                        <input type="file" accept="image/*,.png,.jpg,.gif" id="ImgFile"
                                               name="File" class="form-control d-none Edit-Photo" placeholder="Photo">
                                    </div>
                                    <div class="col-lg-12 pt-5 pb-5">
                                        <label class="Label-Model">Description</label>
                                        <textarea class="h-75" rows="6"></textarea>
                                    </div>
                                    <input id="id" name="id" type="number" class="d-none" />
                                    <input id="ImgUrl" name="ImgUrl" type="hidden" />
                                </div>
                                <div class="col-lg-12">
                                    <button class="Red-Btn-OutLine OutLine-Red Btn-Model" onclick="EditPacking('EditPacking-Model','EditPacking-Form')" type="button" id="BtnSend">
                                        Edit Packing
                                        <span class="Spinner spinner-border spinner-border-sm ml-2 mb-1 d-none" role="status" aria-hidden="true"></span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- Delete Packing Model -->
    <div class="modal fade" id="DeletePacking-Model" tabindex="-1" role="dialog" aria-labelledby="DeletePackingLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div>
                    <button type="button" class="close m-2" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h2 class="Model-Titel w-50">are you sure you want to delete this Packing?</h2>
                    <h5 class="Model-Contetn"> Deleting the selected Packing is permanent. You won’t be able to undo this action.</h5>
                    <input type="hidden" id="EntityId" />
                    <div class="col-lg-12">
                        <button class="Red-Btn-OutLine OutLine-Red ml-3 Btn-Model" type="button" data-dismiss="modal"> Cancel</button>
                        <button class="Red-Btn-OutLine OutLine-White Btn-Model" type="button" data-dismiss="modal" id="BtnDelete">Delete </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

