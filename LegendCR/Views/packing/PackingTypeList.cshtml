@* 
@using LegendCR.CommonDefinitions.DTO;
@using LegendCR.Helpers;
@using LegendCR.BL.Services;
@using LegendCR.DAL.DB;
@model List<PackingType>
<main>
    <div class="container-fluid site-width">
        <!-- START: Breadcrumbs -->
        <div class="row">
            <div class="col-12 align-self-center">
                <div class="sub-header mt-3 py-3 align-self-center d-sm-flex w-100 rounded">
                    <div class="w-sm-100 mr-auto"><h4 class="mb-0">Packing Type List</h4></div>
                    <ol class="breadcrumb bg-transparent align-self-center m-0 p-0">
                        <li class="breadcrumb-item">Packing Management</li>
                        <li class="breadcrumb-item active"><a href="#">Packing Type List</a></li>
                    </ol>
                </div>
            </div>
        </div>
        <!-- END: Breadcrumbs -->

        <!-- START: Data Table -->
        <div class="row">
            <div class="col-12 mt-3">
                <div class="card">
                    <div class="card-header justify-content-between align-items-center" style="white-space:nowrap">
                        <h4 style="display:inline-block" class="card-title">Packing Type List</h4>
                        &nbsp;<a style="display:inline-block;" data-toggle="modal" data-target="#AddNewForm" class="btn btn-success text-white"><b>Add New Packing Type</b></a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered dataTable table-hover" id="DataTable" style="font-weight:bold;color:darkblue">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Arabic Name</th>
                                        <th>English Name</th>
                                        <th>Edit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if(Model !=null)
                                    {
                                      for (int i = 0; i < Model.Count(); i++)
                                    {
                                        <tr>
                                            <td>@(i+1)</td>
                                            <td>@Model[i].NameAr</td>
                                            <td>@Model[i].NameEn</td>
                                            <td>
                                                <!-- START: Edit Form -->
                                                <a data-toggle="modal" data-target="#EditForm_@Model[i].Id" class="text-success edit-document h5"><i class="icon-pencil"></i></a>
                                                <div class="modal fade text-left" id="EditForm_@Model[i].Id" tabindex="-1" role="dialog" aria-hidden="true">
                                                    <form class="needs-validation" method="post" action="@Url.Action("EditpackingType", "packing", new { id = Model[i].Id })" novalidate>
                                                        <div class="modal-dialog" role="document">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <h5 class="modal-title">Edit Packing Type</h5>
                                                                    <button type="button" class="close" data-dismiss="modal">
                                                                        <span aria-hidden="true">&times;</span>
                                                                    </button>
                                                                </div>
                                                                <div class="modal-body">
                                                                     <div class="form-group">
                                                                        <h6 class="modal-title" style="margin-bottom:5px">ID:</h6>
                                                                        <input class="form-control" type="text" readonly name="ID" value="@Model[i].Id" required />
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <h6 class="modal-title" style="margin-bottom:5px">Arabic Name :</h6>
                                                                        <input class="form-control" type="text" name="NameAr" value="@Model[i].NameAr" required />
                                                                        <div class="invalid-feedback">
                                                                            Please enter arabic name.
                                                                        </div>
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <h6 class="modal-title" style="margin-bottom:5px">English Name :</h6>
                                                                        <input class="form-control" type="text" name="NameEn" value="@Model[i].NameEn" />
                                                                         <div class="invalid-feedback">
                                                                            Please enter English name.
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <div class="modal-footer">
                                                                    <input type="submit" class="btn btn-success font-weight-bold text-white" value="Edit Packing Type" />
                                                                    <button type="button" class="btn btn-secondary" data-dismiss="modal"><b>Cancel</b></button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                                <!-- END: Edit Form -->
                                            </td>
                                        </tr>
                                    }
                                  }
                                   
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END: Data Table -->
    </div>

    <!-- START: Add New Form -->
    <div class="modal fade text-left" id="AddNewForm" tabindex="-1" role="dialog" aria-hidden="true">
        <form class="needs-validation" method="post" action="@Url.Action("AddpackingType", "Packing")" novalidate>
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Add New Packing Type</h5>
                        <button type="button" class="close" data-dismiss="modal">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <h6 class="modal-title" style="margin-bottom:5px">Arabic Name :</h6>
                            <input class="form-control" type="text" id="NameAr" name="NameAr" required />
                            <div class="invalid-feedback">
                                Please enter arabic name.
                            </div>
                        </div>
                        <div class="form-group">
                            <h6 class="modal-title" style="margin-bottom:5px">English Name :</h6>
                            <input class="form-control" type="text" id="NameEn" name="NameEn" required />
                             <div class="invalid-feedback">
                                Please enter English name.
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <input type="submit" class="btn btn-success font-weight-bold text-white" value="Add Packing Type" />
                        <button type="button" class="btn btn-secondary" data-dismiss="modal"><b>Cancel</b></button>
                    </div>
                </div>
            </div>
        </form>
    </div>
     <!-- END: Add New Form -->

</main> *@